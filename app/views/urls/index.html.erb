<p id="notice"><%= notice %></p>

<h1>URLs Index</h1>

<%= link_to 'Create a new Shortened URL', new_url_path %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Original Url</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @urls.each do |url| %>
      <tr>
        <td><%= url.id %></td>
        <td><%= url.original_url %></td>
        <td><%= link_to 'Edit', edit_url_path(url) %></td>
        <td><%= link_to 'Destroy', url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
